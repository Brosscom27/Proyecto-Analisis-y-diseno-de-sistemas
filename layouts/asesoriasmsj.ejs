<%- include('partials/head') %>
<link rel="stylesheet" href="/stylesheets/styleMain.css">
<link rel="stylesheet" href="/stylesheets/styleSolicitudes.css">
</head>
<body>
    <%- include('partials/navbarAsesores') %>
    <div class="space2"></div>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Solicitudes de Asesor√≠as</h1>
        <div class="row">
            <% mensajes.forEach(mensaje => { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Materia: <%= mensaje.asesoriaId.nombre %></h5>
                            <p class="card-text">Mensaje: <%= mensaje.texto %></p>
                            <p class="card-text">Horario: <%= mensaje.asesoriaId.horario %></p>
                            <p class="card-text">Asesor: <%= mensaje.asesoriaId.tutor %></p>
                            <p class="card-text">Contacto: <%= mensaje.asesoriaId.contacto %></p>
                            <form action="/asesorias/<%= mensaje._id %>/aceptar" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-success">Aceptar</button>
                            </form>
                            <form action="/asesorias/<%= mensaje._id %>/rechazar" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Rechazar</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <!--Bootstrap Script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
